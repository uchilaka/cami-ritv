<%= form_with(model: deal, class: "contents") do |form| %>
  <% if deal.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(deal.errors.count, "error") %> prohibited this deal from being saved:</h2>

      <ul class="list-disc ml-6">
        <% deal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :account_id %>
    <%= form.text_field :account_id, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": deal.errors[:account_id].none?, "border-red-400 focus:outline-red-600": deal.errors[:account_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": deal.errors[:amount].none?, "border-red-400 focus:outline-red-600": deal.errors[:amount].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :expected_close_at %>
    <%= form.datetime_field :expected_close_at, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": deal.errors[:expected_close_at].none?, "border-red-400 focus:outline-red-600": deal.errors[:expected_close_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :last_contacted_at %>
    <%= form.datetime_field :last_contacted_at, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": deal.errors[:last_contacted_at].none?, "border-red-400 focus:outline-red-600": deal.errors[:last_contacted_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :priority %>
    <%= form.text_field :priority, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": deal.errors[:priority].none?, "border-red-400 focus:outline-red-600": deal.errors[:priority].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :stage %>
    <%= form.text_field :stage, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": deal.errors[:stage].none?, "border-red-400 focus:outline-red-600": deal.errors[:stage].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :type %>
    <%= form.text_field :type, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": deal.errors[:type].none?, "border-red-400 focus:outline-red-600": deal.errors[:type].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
