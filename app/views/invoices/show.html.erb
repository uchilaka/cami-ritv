<div class="mx-auto md:w-2/3 w-full flex dark:text-white">
  <div class="mx-auto">
    <% content_for :invoice_notice do %>
      <% if notice.present? %>
        <%= render "shared/alerts/info", message: notice %>
      <% end %>
    <% end %>

    <%= render @invoice %>

    <div class="flex w-full items-center justify-end mt-2">
      <%= link_to "Back to invoices", invoices_path, class: secondary_btn_classes("py-3 px-5") %>
      <%= link_to "Edit", edit_invoice_path(@invoice), class: secondary_btn_classes("ml-2 py-3 px-5") %>
      <div class="inline-block ml-2">
        <%= button_to "Destroy", @invoice, method: :delete, class: secondary_btn_classes("py-3 px-5", style: :danger) %>
      </div>
    </div>
  </div>
</div>
