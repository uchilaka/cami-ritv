<% modal_id = modal_dom_id(@account, content_type: "external_link_portal") %>
<%= turbo_frame_tag resource_dom_turbo_id(@account, action: "manage-show-or-edit") do %>
  <!--
    TODO: Initialize this modal in a Turbo compatible way so that it works
    with the markup configured Flowbite modal options (e.g. data-modal-backdrop="static")
  -->
  <div
    id="<%= modal_id %>" tabindex="-1" aria-hidden="true"
    data-modal-placement="center-center" data-modal-backdrop="static"
    class="flowbite-modal hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
      <!-- Modal content -->
      <div class="relative bg-white rounded-lg shadow-sm dark:bg-gray-700">
        <!-- Modal header -->
        <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600 border-gray-200">
          <%= render "accounts/modal/header" %>
          <!-- Hide modal action (IMPORTANT: only works when launched from accounts list action) -->
          <form class="hide-modal-action" action="<%= show_li_actions_account_path(@account) %>">
            <button
              type="submit"
              data-modal-turbo-hide="<%= modal_id %>"
              class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white">
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
          </form>
        </div>
        <!-- Modal body -->
        <div class="p-4 md:p-5 space-y-4">
          <div class="text-center">
            <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400">
              You are about to leave the <strong><%= I18n.t("globals.app.name") %></strong> app and navigate to an external CRM portal.
            </h3>

            <div class="mt-5 flex flex-col md:flex-row md:justify-end md:items-center md:space-x-4">
              <%= link_to "Proceed to CRM Portal", @account.crm_url, target: "_blank", rel: "noopener noreferrer",
                          class: primary_btn_classes("px-5 py-3 me-2") %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
