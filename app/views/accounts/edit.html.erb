<div class="mx-auto md:w-2/3 w-full">
  <!-- Account form header -->
  <%= render 'accounts/account-header', { account: @account, title: "Editing account" } %>

  <% content_for :form_actions do %>
    <%= link_to "Show this account", @account, class: secondary_btn_classes("px-5 py-3") %>
    <%= link_to "Back to accounts", accounts_path, class: secondary_btn_classes("mx-2 px-5 py-3") %>
  <% end %>

  <%= render "form", account: @account %>
</div>
