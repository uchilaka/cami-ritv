<% content_for :centered_form_layout do %>
  <h3 class="mb-4 dark:text-white">Log in</h3>
  <p class="my-4 dark:text-gray-400"><%= t('devise.passwordless.magic_link_cta') %></p>

  <%= simple_form_for(
        resource,
        as: resource_name,
        url: user_session_path,
        html: { class: "space-y-6" }
      ) do |f| %>
    <div class="field">
      <%= f.input :email, as: :email, autofocus: true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.input :remember_me, as: :boolean, wrapper: :inline_checkbox %>
      </div>
    <% end %>

    <div class="field">
      <%= f.submit "Send me an access link", class: primary_btn_classes("block w-full") %>
    </div>
  <% end %>
  <div class="my-3">
    <%= render "shared/separator-with-text", content: "OR" %>
  </div>
  <%= render "users/shared/omniauth/links" %>
  <div class="mb-4">
    <%= render "shared/separator-with-text", content: "Need something else?" %>
  </div>
  <%= render "users/shared/links" %>
<% end %>
<%= render "layouts/centered-form-layout" %>
