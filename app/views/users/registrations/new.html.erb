<% content_for :centered_form_layout do %>
  <h3 class="mb-5 dark:text-white">Sign up</h3>

  <%= render "users/shared/omniauth/links" %>

  <%= render 'shared/terms_and_privacy_notice' %>

  <div class="md:w-8/12 mx-auto my-5">
    <%= render 'shared/separator-with-text', content: 'OR' %>
  </div>

  <%= form_for(resource, as: resource_name, url: user_registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :first_name, placeholder: 'John', class: "input" %>
    </div>

    <div class="field">
      <%= f.label :last_name, class: "label" %>
      <%= f.text_field :last_name, class: "input", placeholder: 'Smith' %>
    </div>

    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="field">
      <%= render 'shared/terms_and_privacy_notice' %>
    </div>

    <div class="field">
      <%= f.submit "Sign up", class: "btn btn-primary block w-full" %>
    </div>
  <% end %>

  <div class="md:w-8/12 mx-auto my-5">
    <%= render 'shared/separator-with-text', content: 'Other options' %>
  </div>

  <%= render "users/shared/links" %>
<% end %>
<%= render "layouts/centered-form" %>
