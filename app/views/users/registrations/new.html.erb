<% content_for :centered_form_layout do %>
  <h3 class="mb-5 dark:text-white">Sign up</h3>

  <%= render "users/shared/omniauth/links" %>

  <%= render 'shared/terms_and_privacy_notice' %>

  <div class="md:w-8/12 mx-auto my-5">
    <%= render 'shared/separator-with-text', content: 'OR' %>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.input :first_name, placeholder: 'John' %>
    </div>

    <div class="field">
      <%= f.input :last_name, placeholder: 'Smith' %>
    </div>

    <div class="field">
      <%= f.input :email, as: :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.input :password,
                  as: :password, hint: @minimum_password_length_hint.presence,
                  autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.input :password_confirmation, as: :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= render 'shared/terms_and_privacy_notice' %>
    </div>

    <div class="field">
      <%= f.submit "Sign up", class: primary_btn_classes("block w-full") %>
    </div>
  <% end %>

  <div class="md:w-8/12 mx-auto my-5">
    <%= render 'shared/separator-with-text', content: 'Other options' %>
  </div>

  <%= render "users/shared/links" %>
<% end %>
<%= render "layouts/centered-form" %>
