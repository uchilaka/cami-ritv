<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-100">
  <%= content_for :head do %>
    <!-- include via CDN for turbo support -->
    <script src="https://cdn.tailwindcss.com"></script>
  <% end %>
  <%= render partial: "layouts/shared/head", locals: { expect_flash_of_unstyled_content: false } %>

  <body class="h-full">
    <main class="flex min-h-full flex-col justify-center items-center px-6 py-0 lg:px-8">
      <section class="sm:mx-auto sm:w-full sm:max-w-sm lg:max-w-lg">
        <%= yield %>
      </section>
    </main>
    <%= render "shared/footer/simple" %>
    <!-- Bootstrap all the Flowbite JS things -->
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  </body>
</html>
