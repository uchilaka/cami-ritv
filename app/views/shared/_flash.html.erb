<% flash.each do |type, msg| %>
  <% if type == 'alert' %>
    <%= content_tag :div, msg, class: "z-30 alert alert-danger", role: :alert %>
  <% elsif type == 'notice' %>
    <%= content_tag :div, msg, class: "z-30 alert alert-primary", role: :alert %>
  <% else %>
    <%= content_tag :div, msg, class: "z-30 alert alert-primary", role: :alert %>
  <% end %>
<% end %>
