<div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-main">
  <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-transparent rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 dark:border-brand-700">
    <% (user_signed_in? ? main_menu : public_menu).each do |item| %>
      <%= render 'shared/navbar/menu_item', item: %>
    <% end %>
    <% unless user_signed_in? %>
      <li><%= nav_link_to render("shared/buttons/login"), new_user_session_path, class: "nav-link #{navbar_link_classes}" %></li>
      <li><%= nav_link_to render("shared/buttons/sign_up"), new_user_registration_path, class: "nav-link #{navbar_link_classes}" %></li>
    <% end %>
  </ul>
</div>
