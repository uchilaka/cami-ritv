<div id="<%= dom_id webhook %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= webhook.slug %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">URL:</strong>
    <%= webhook.url %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Verification token:</strong>
    <%= webhook.verification_token %>
  </p>
  <div class="my-5">
    <strong class="block font-medium mb-1">Readme:</strong>
    <%= webhook.readme.to_s %>
  </div>
</div>

<div class="my-5 flex flex-col md:flex-row md:justify-end md:items-center md:space-x-4">
  <%= yield :form_actions %>
</div>
