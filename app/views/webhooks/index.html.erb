<% content_for :title, "Webhooks" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold dark:text-white text-4xl">Webhooks</h1>
    <%= link_to "New webhook", new_webhook_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="webhooks" class="min-w-full">
    <% if @webhooks.any? %>
      <% @webhooks.each do |webhook| %>
        <%= render webhook %>
        <p>
          <%= link_to "Show this webhook", webhook, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center dark:text-gray-300 my-10">No webhooks found.</p>
    <% end %>
  </div>
</div>
