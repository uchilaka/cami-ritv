<div class="w-full dark:text-white min-h-[var(--lc-min-form-height)]">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold dark:text-white text-4xl">Deal Records</h1>
  </div>

  <% if flash[:success].present? %>
    <%= render "shared/alerts/success", message: flash[:success] %>
  <% end %>

  <% content_for :bottom_nav_actions do %>
    <%= link_to "#{@webhook.name} webhook", webhook_path(@webhook), class: secondary_btn_classes("px-5 py-3 md:mx-2") %>
  <% end %>

  <div class="overflow-x-auto">
    <table class="table table-auto min-w-full divide-y divide-gray-200 text-gray-500 dark:text-gray-400">
      <thead class="bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Name</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Deal Stage</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Deal Value</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Expected Close Date</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Created</th>
          <th scope="col" class="relative px-6 py-3">
            <span class="sr-only">Actions</span>
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
      <% if @records.any? %>
        <% @records.each do |record| %>
          <!-- TODO: Get brand colors from emeraldTheme working -->
          <!-- TODO: Implement row hover styles with tailwind -->
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="ml-4">
                  <div class="text-sm font-medium dark:text-white"><%= record.name %></div>
                  <% if record.email.present? %>
                    <div class="text-sm text-gray-500 dark:text-gray-50"><%= record.email %></div>
                  <% end %>
                  <% if record.phone_number.present? %>
                    <div class="text-sm text-gray-500 dark:text-gray-50"><%= record.phone_number %></div>
                  <% end %>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                <%= case record.deal_stage&.downcase
                    when 'new' then 'bg-blue-100 text-blue-800'
                    when 'in progress' then 'bg-yellow-100 text-yellow-800'
                    when 'closed' then 'bg-green-100 text-green-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= record.deal_stage || 'N/A' %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <%= number_to_currency(record.deal_value, precision: 2) if record.deal_value %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%#= record.expected_close_at&.strftime('%b %d, %Y') || 'N/A' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= time_ago_in_words(record.created_at) %> ago
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "View",
                          webhook_record_url(@webhook, record.remote_system_id),
                          class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">
            No records found.
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <%= render "webhooks/notion/records/pagination" %>
</div>
