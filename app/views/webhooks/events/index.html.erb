<div class="w-full dark:text-gray-300 min-h-[var(--lc-min-form-height)]">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold dark:text-white text-4xl"><%= @webhook.name %> Events</h1>
    <%= link_to "Raw Data", webhook_events_path(@webhook, format: :json), class: secondary_btn_classes %>
  </div>

  <% if flash[:success].present? %>
    <%= render "shared/alerts/success", message: flash[:success] %>
  <% end %>

  <% content_for :bottom_nav_actions do %>
    <%= link_to "#{@webhook.name} webhook", webhook_path(@webhook), class: secondary_btn_classes("px-5 py-3 md:mx-2") %>
  <% end %>

  <div id="webhook-events" class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="table table-auto min-w-full divide-y divide-gray-200 text-gray-500 dark:text-gray-400">
        <thead class="bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Type</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Key</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Status</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Created At</th>
          <th scope="col" class="relative px-6 py-3">
            <span class="sr-only">Actions</span>
          </th>
        </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
        <% if @events.any? %>
          <%= render partial: 'webhooks/events/list_item/index', collection: @events, as: :event %>
        <% else %>
          <tr>
            <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">
              No records found.
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= render "webhooks/events/pagination" %>
</div>
